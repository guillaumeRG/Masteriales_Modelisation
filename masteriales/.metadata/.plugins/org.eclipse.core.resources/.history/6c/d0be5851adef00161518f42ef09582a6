
public class StationsProches {
	float d[];
	int idStation[];
	int nbStations=0;
	
	public void ajouterStation(int idStation,float d){
		nbStations++;
		int idStationLocal[]=this.idStation;
		this.idStation= new int[nbStations];
		float dLocal[]= this.d;
		this.d = new float[nbStations];
		
		for(int i=0;i<nbStations;i++){
			if(i!=(nbStations-1)){
				this.idStation[i]=idStationLocal[i];
				this.d[i]=dLocal[i];
			}
			else{
				this.idStation[i]=idStation;
				this.d[i]=d;
			}
		}
	}
}
